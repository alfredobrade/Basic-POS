@model CustomerListVM
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="conainer p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Clientes</h2>

        </div>

        <div class="col-6 text-end">
            <a asp-controller="Customer" asp-action="NewCustomer" asp-route-BusinessUnitId="@Model.BusinessUnitId" class="btn btn-primary">Nuevo Cliente</a>
        </div>

        </div>
    <br />
    <form asp-controller="Customer" asp-action="Index" method="get">
        <div>
            Nombre:      <input type="text" name="name" class="form-text" />
        </div>
        
        <div>

            <input type="submit" value="Buscar" class="btn btnsmall btn-dark mt-1" />
        </div>

    </form>
    @if (Model.Customers.Count() > 0)
    {
        <table class="table table-bordered table-striped mt-2" style="width:100%">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Email</th>
                    @*<th>Marca</th>*@
                    <th>Num Identif</th>
                    <th>Telefono</th>
                    <th>Dirección</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Customers)
                {

                    <tr>
                        <th width="10%">@item.Name</th>
                        <th width="15%">@item.Email</th>
                        @*<th width="10%">@item.Brand.Name</th>*@
                        <th width="10%">@item.IdentificationNumber</th>
                        <th width="10%">@item.PhoneNumber</th>
                        <th width="10%">@item.Address</th>
                        <th class="text-center">
                            <div width="30" class="w-75 btn-group" role="group">
                                <a asp-controller="Customer" asp-action="Edit" asp-route-CustomerId="@item.Id" class="btn btn-outline-secondary mx-2">
                                    Editar
                                </a>
                                    <a asp-controller="Customer" asp-action="Delete" asp-route-CustomerId="@item.Id" class="btn btn-outline-danger mx-2">
                                    Eliminar
                                </a>
                            </div>


                        </th>

                    </tr>
                    @*<tr>
            <th>hola soy una linea abajo @item.UserId  @item.Saludar()</th>
            <th>
            <div class="w-75 btn-group" role="group">
            <a asp-controller="Refueling" asp-action="NewRefueling" asp-route-Id="@item.Id" class="btn btn-info">Recargar</a>
            <a asp-controller="Refueling" asp-action="Index" asp-route-Id="@item.Id" class="btn btn-info mx-2">Historial</a>
            </div>
            </th>

            </tr>*@
                }
            </tbody>

        </table>
    }
    else
    {
        <p>No hay Clientes</p>
    }

</div>


