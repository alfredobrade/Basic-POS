@model List<PointOfSale.Models.BusinessUnit>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>

<head>
    <meta name="viewport" content="width=device-width" />
    <title>BusinessUnits</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css"
          integrity="sha384-xOolHFLEh07PJGoPkLv1IbcEPTNtaed2xpHsD9ESMhqIYd0nLMwNLD69Npy4HI+N" crossorigin="anonymous">

</head>

<body>
    <div class="container-fluid">
        <div class="row mt-5 d-flex justify-content-center mb-5 ">
            <ul class="nav nav-tabs">
                <li class="nav-item ">
                    <a class="btn btn-outline-info ml-2" asp-controller="BusinessUnit" asp-action="NewBusinessUnit"
                       asp-route-UserId="">Nuevo Negocio</a>

                </li>
                <li class="nav-item ">
                    <a class="btn btn-outline-dark ml-2" asp-area="" asp-controller="Access"
                       asp-action="Exit">Cerrar Sesión</a>
                </li>
            </ul>

        </div>
        @if (Model.Count() > 0)
        {

            <div class="row d-flex justify-content-center">

                @foreach (var item in Model)
                {
                    <a class="text-decoration-none text-reset" asp-controller="BusinessUnit" asp-action="SelectBusiness"
                       asp-route-BusinessUnitId="@item.Id">
                        <div class="card m-3" style="width: 22rem; transition: ease-in-out 0.2s;"
                             onmouseover="this.style.boxShadow='0px 2px 15px 0px black'"
                             onmouseout="this.style.boxShadow='0 0 0 0'">
                            <img src="https://www.revistaareatres.com.ar/files/image/6/6457/633513990e1dc.jpg"
                                 class="card-img-top" alt="">
                            <div class="card-body">
                                <h4 class="card-title font-weight-bolder">@item.Name</h4>
                                @*<p class="card-text">
                                    Lorem ipsum dolor sit amet consectetur adipisicing elit. Accusamus
                                    incidunt dicta quod alias neque aliquid doloribus sint!
                                </p>*@
                            </div>
                        </div>
                    </a>
                }
            </div>

        }
        else
        {
            <p>No hay elementos</p>
        }

    </div>
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js"
            integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj"
            crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-Fy6S3B9q64WdZWQUiU+q4/2Lc9npb8tCaSX9FK7E8HnRr0Jz8D6OP9dO5Vg3Q9ct"
            crossorigin="anonymous"></script>

</body>

</html>