@model PointOfSale.Models.Transaction

@{
    ViewData["Title"] = "NewExpense";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<form method="post" asp-action="NewExpense">
    <input type="hidden" asp-for="BusinessUnitId" />
    <div class="border p-3">

        <div asp-validation-summary="ModelOnly" class="text-danger">
        </div>


        <div class="form-group row">
            <h2 class="text-info pl-3">Nuevo Gasto</h2>
        </div>
        <div class="container">

            <div class="row">
                <div class="col-md-6">
                    <label asp-for="Description" class="form-label">Description</label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <label asp-for="Amount" class="form-label">Amount</label>
                    <input asp-for="Amount" class="form-control" />
                    <span asp-validation-for="Amount" class="text-danger"></span>
                </div>
            </div>

            @*<div class="row">
            <div class="col-md-6">
            <label asp-for="StockMin" class="form-label">StockMin</label>
            <input asp-for="StockMin" class="form-control" />
            <span asp-validation-for="StockMin" class="text-danger"></span>
            </div>
            </div>*@

            <br />
            <div class="d-grid gap-2 d-md-block">
                <button type="submit" class="btn btn-outline-primary">Crear</button>
                <a asp-controller="Transaction" asp-action="Index" class="btn btn-outline-success">Regresar</a>

            </div>
        </div>



    </div>

</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}