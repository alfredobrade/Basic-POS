<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>YakaPOS.1.4 - @ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BasicPointOfSale.styles.css" asp-append-version="true" />
</head>
<body>
    <!-- <div class="container"> -->
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
    <!-- </div> -->

    <footer class="border-top footer text-muted">
        <div class="container">
            2023 - Develop By YakaTec - Alfredo Brade - @*<a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>*@
            <p>Hora: <span id="hora"></span></p>
            <p>Hora Arg: <span id="hora2"></span></p>

        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>

    <script>
        $(document).ready(function () {
            setInterval(function () {
                var fecha = new Date();
                var hora = fecha.getHours();
                var minutos = fecha.getMinutes();
                var segundos = fecha.getSeconds();
                var horaCompleta = hora + ":" + minutos + ":" + segundos;
                $("#hora").text(horaCompleta);

            }, 1000);
        });
    </script>
    <script>
        $(document).ready(function () {
            function getServerTime() {
                $.ajax({
                    url: '@Url.Action("HoraServidor", "Access")', // URL de la acción del controlador
                    type: 'GET',
                    success: function (data) {
                        $('#hora2').text(data);
                    },
                    error: function () {
                        console.log('Error al obtener la hora del servidor.');
                    }
                });
            }
            setInterval(getServerTime, 1000);
        });
    </script>



    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
