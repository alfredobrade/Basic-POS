
@model List<PointOfSale.Models.BusinessUnit>

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>
@if (Model.Count() > 0)
{
    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>Nombre</th>
                
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {

                <tr>
                    <th width="25%">@item.Name</th>
                    
                    <th class="text-center">
                        <div width="30" class="w-75 btn-group" role="group">
                            <a asp-controller="Vehicle" asp-action="Edit" asp-route-VehicleId="@item.Id" class="btn btn-primary mx-2">
                                Editar
                            </a>
                            <a asp-controller="Vehicle" asp-action="Delete" asp-route-VehicleId="@item.Id" class="btn btn-danger mx-2">
                                Eliminar
                            </a>
                        </div>


                    </th>

                </tr>
                @*<tr>
                    <th>hola soy una linea abajo @item.UserId  @item.Saludar()</th>
                    <th>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Refueling" asp-action="NewRefueling" asp-route-Id="@item.Id" class="btn btn-info">Recargar</a>
                            <a asp-controller="Refueling" asp-action="Index" asp-route-Id="@item.Id" class="btn btn-info mx-2">Historial</a>
                        </div>
                    </th>

                </tr>*@
            }
        </tbody>

    </table>
}
else
{
    <p>No hay elementos</p>
}
<div class="row mt-5 d-flex justify-content-center">
    <a class="btn btn-info" asp-controller="BusinessUnit" asp-action="NewBusinessUnit">Sign Up</a>

</div>

